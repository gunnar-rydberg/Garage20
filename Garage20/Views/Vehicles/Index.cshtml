@model IEnumerable<Garage20.Models.ListViewModel>

@{
    ViewBag.Title = "Welcome to our Garage";
}

<h2>Vehicle Register</h2>

@using (Html.BeginForm("Index", "Vehicles", FormMethod.Get))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <p>
                <div class="form-inline">
                    Reg.no: @Html.TextBox("search", null, new { @class = "form-control" })
                    <div class="btn-group">
                        <input type="submit" value="Search" class="btn btn-primary" />
                        <!-- NOTE! you cannot use button tag because it will post the form -->
                        <a class="btn panel-default" data-toggle="collapse" data-target="#extended-search-panel">Extended search</a>
                    </div>

                    @Html.ActionLink("Park Vehicle", "Park", null, new { @class = "btn btn-info pull-right" })
                </div>
            </p>
            <div id="extended-search-panel" class="form-inline collapse">
                <p>
                    Brand: @Html.TextBox("searchBrand", null, new { @class = "form-control" })
                    Model: @Html.TextBox("searchModel", null, new { @class = "form-control" })
                </p>
            </div>

        </div>
        <div class="panel-body">

        <h4>Vacant parking spaces: @ViewBag.FreeCapacity out of @ViewBag.TotalCapacity</h4>
        <hr />

        <table class="table" id="tblVehicles">
            <tr>
                <th onclick="sortTable(0)">
                    @Html.DisplayNameFor(model => model.Type)
                    @*@Html.ActionLink("Type", "Sort", new { sortOrder = ViewBag.SortTypeOrder, column = "type" })*@
                </th>
                <th onclick="sortTable(1)">
                    @Html.DisplayNameFor(model => model.RegNo)
                </th>
                <th onclick="sortTable(2)">
                    @Html.DisplayNameFor(model => model.Color)
                </th>
                <th onclick="sortTable(3)">
                    @Html.DisplayNameFor(model => model.ParkingTime)
                </th>
                <th onclick="sortTable(4)">
                    @Html.DisplayNameFor(model => model.ParkingSpace)
                </th>
                @*<th onclick="sortTable(3)">
                    @Html.DisplayNameFor(model => model.NoWheels)
                </th>
                <th onclick="sortTable(4)">
                    @Html.DisplayNameFor(model => model.Model)
                </th>
                <th onclick="sortTable(5)">
                    @Html.DisplayNameFor(model => model.Brand)
                </th>
                <th onclick="sortTable(6)">
                    @Html.DisplayNameFor(model => model.Date)
                </th>*@
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegNo)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.Color)*@
                        <div style="width: 40px; height: 20px; border: 1px solid black; background-color: @item.Color;"></div>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem =>item.ParkingTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParkingSpace)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.NoWheels)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>*@
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("CheckOut", "CheckOut", new { id = item.Id })
                    </td>
                </tr>
            }

            </table>

        </div>
    </div>
}
<script src="~/Scripts/garage.js"></script>