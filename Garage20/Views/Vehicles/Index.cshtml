@model IEnumerable<Garage20.Models.Vehicle>

@{
    ViewBag.Title = "Welcome to our Garage";
}

<h2>Vehicle Register</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        @using (Html.BeginForm("Index", "Vehicles", FormMethod.Get))
            {
            <p>
                Reg.no: @Html.TextBox("search")
                <input type="submit" value="Search" />
            </p>
        }
    </div>
</div>

@using (Html.BeginForm("Index", "Vehicles", FormMethod.Get))
{
    <p>
        Reg.no: @Html.TextBox("search")
        <input type="submit" value="Search" />
        <!-- NOTE! you cannot use button tag because it will post the form -->
        <a class="btn panel-default" data-toggle="collapse" data-target="#extended-search-panel">Extended search</a>
    </p>
            <div id="extended-search-panel" class="collapse">
                <p>
                    Brand: @Html.TextBox("searchBrand")
                    Model: @Html.TextBox("searchModel")
                </p>
            </div>
}




<p>
    @Html.ActionLink("Park Vehicle", "Park")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Check Out", "CheckOut", new { id = item.Id })
            </td>
        </tr>
    }

</table>
